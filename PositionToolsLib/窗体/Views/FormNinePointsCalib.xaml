                            HorizontalAlignment="Left" VerticalAlignment="Top"
Margin="190,115,0,0" Width="120"  attach:ButtonAttach.ButtonCornerRadius="3" />

                            <DataGrid  Margin="5,160,5,5"  HorizontalAlignment="Stretch" Width="auto"
VerticalGridLinesBrush="#dddddd"   BorderThickness="2" BorderBrush="#dddddd"
Style="{DynamicResource datagrid}"  ItemsSource="{Binding}" Background="#ffffff"  >
